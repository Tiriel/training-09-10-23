<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <header>
        {% block header '' %}
        {% block navbar %}
            {{ include('includes/_navbar.html.twig', {current: app.current_route}, with_context = false) }}
        {% endblock %}
    </header>
    <main class="container-fluid m-auto py-5 row">
        <section class="offset-2 col-md-8">
        {% block body %}{% endblock %}
        </section>
        <aside class="col-md-2">
            {{ render_esi(controller('App\\Controller\\MovieController::lastMovies')) }}
        </aside>
    </main>
    </body>
</html>
